<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:background="@drawable/bg_xml_home_toplight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:id="@+id/tag_home_actbar_name"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
            android:background="@drawable/bg_xml_home_toplight_nested"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_name"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/tag_home_actbar_name"
            android:id="@+id/tag_home_actbar_member_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_baseline_expand_more_24"
            android:fontFamily="sans-serif-medium"
            android:text="Member"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </RelativeLayout>
    <ImageView
        android:id="@+id/tag_home_actbar_srch"
        android:layout_marginRight="5dp"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_search_24"></ImageView>

</RelativeLayout>